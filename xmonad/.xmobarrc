Config
  { font = "xft:Fira Code:size=9"
  , additionalFonts =
      [ "xft:Fira Code:size=9:bold"
      , "xft:DejaVu Sans:size=9"
      ]

  , bgColor = "#1C2023"
  , fgColor = "#F3F4F5"

  , template = " <fn=2>â™ž</fn> %UnsafeStdinReader% }{ <fn=1>%battery%</fn> :: <fn=1>%date%</fn> "

  , commands =
      [ Run Battery [ "--template", "<acstatus>"

                    , "--Low", "10"
                    , "--High", "80"

                    , "--"
                    -- discharging
                    , "-o", "<left>% (<timeleft>)"
                    -- charging
                    , "-O", "<fc=#00ff00><left>% (<timeleft>)</fc>"
                    -- charged
                    , "-i", "<fc=#00ff00><left>%</fc>"
                    ] 50
      , Run Date "%a %H:%M" "date" 10
      , Run UnsafeStdinReader
      ]
  }
